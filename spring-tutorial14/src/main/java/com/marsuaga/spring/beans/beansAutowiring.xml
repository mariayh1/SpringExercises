<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Autowiring by type: be careful with:
	1. multiple beans 
	2. multiple beans implement the same interface and it is generalized -->
<!-- Autowiring by name in case we use generalization but be careful
    1. use the exactly the property names it is case-sensitive
    2. they can be from the same class not different classes ConsoleWrite and FileWriter -->
<!-- Autowiring by constructor: they take into account types -->
	<bean id="logger" class="com.marsuaga.spring.autowiring.Logger"
		autowire="constructor">
	</bean>
	<bean id="consoleWriter"
		class="com.marsuaga.spring.autowiring.ConsoleWriter">
	</bean>

	<bean id="fileWriter"
		class="com.marsuaga.spring.autowiring.FileWriter">
	</bean>
</beans>
